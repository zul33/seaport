@using SeaportClientApplication.Models;
@model ShipListModel

@{
    ViewBag.Title = "Liste der aktiven Schiffe";
}

<h2>Liste der aktiven Schiffe</h2>

<p>
    @Html.ActionLink("Schiff hinzufügen", "InactiveList")
</p>
<table class="table">
    <tr>
        <th>
            
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Ships)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.Raw(Model.ResponseMessage)
</p>